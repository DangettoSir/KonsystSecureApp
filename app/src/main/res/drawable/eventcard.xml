<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Внешний прямоугольник (граница) -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="12dp"
                android:color="@color/secondary_lighter"/> <!-- Цвет границы -->
            <solid android:color="@color/secondary_lighter" /> <!-- Цвет границы -->
            <corners android:radius="12dp" /> <!-- Радиус закругления углов границы -->
        </shape>
    </item>

    <!-- Внутренний прямоугольник (фон) -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_white" /> <!-- Цвет фона внутреннего прямоугольника -->
            <corners android:radius="12dp" /> <!-- Радиус закругления углов внутреннего прямоугольника -->
        </shape>
    </item>
</layer-list>